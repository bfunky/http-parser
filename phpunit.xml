<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        colors="true"
        verbose="true"
        stopOnFailure="false"
        bootstrap="./vendor/autoload.php">
    <testsuites>
        <testsuite name="Test Suite">
            <directory suffix=".php">./test/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>